# ─── Base de données ───────────────────────────────────────────────────────────
DATABASE_URL=mysql://user:password@localhost:3306/terra_biga

# ─── Sécurité ─────────────────────────────────────────────────────────────────
JWT_SECRET=GENERATE_A_RANDOM_32_CHAR_STRING_HERE

# ─── URLs (remplacer par les vraies URLs en production) ───────────────────────
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3000

# ─── Ligdicash (récupérer depuis le portail développeur Ligdicash) ────────────
# ⚠️  VOUS AVEZ DÉJÀ CES CLÉS sur terrabiga.com — réutiliser les mêmes !
LIGDICASH_API_KEY=your_ligdicash_api_key
LIGDICASH_API_TOKEN=your_ligdicash_bearer_token
LIGDICASH_BASE_URL=https://app.ligdicash.com

# ─── WhatsApp Business API (Meta for Developers) ─────────────────────────────
# Nécessaire uniquement pour les notifications OTP — à configurer Phase 1
WHATSAPP_ACCESS_TOKEN=your_meta_cloud_api_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id

# ─── OAuth (Manus — ne pas modifier) ─────────────────────────────────────────
MANUS_APP_ID=your_manus_app_id
OWNER_OPEN_ID=your_owner_open_id

# ─── Node ─────────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=3000
